<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="itemImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/ep_main_item_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/ep_main_item_marginTop</item>
    </style>

    <style name="itemTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/ep_main_item_marginLeft</item>
        <item name="android:layout_marginBottom">@dimen/ep_main_item_marginBottom</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/ep_main_item_text_size</item>
    </style>

</resources>
